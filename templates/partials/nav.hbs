 <!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow" id="mainNav">
	<div class="container">
		<a class="navbar-brand js-scroll-trigger d-flex" href="#page-top">
			<div class="p-2 bg-rgba-white mr-2">
				<img class="" src="{{logoImg}}" alt="Chroma Quilting Logo"/>
			</div>
			<div class="flex-column">
				<div id="brand-title">Chroma Quilting</div>
				<div class="mt-n2" id="brand-subtitle">&amp; The Creative Studio</div>
			</div>
			</a>
		<button class="navbar-toggler navbar-toggler-right" type="button"
			data-toggle="collapse"
			data-target="#navbarResponsive" aria-controls="navbarResponsive"
			aria-expanded="false"
			aria-label="Toggle navigation">
			Menu
			<i class="fas fa-bars ml-1"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav text-uppercase ml-auto">
				{{#each nav}}
				<li class="nav-item"><a class="nav-link js-scroll-trigger"
						href="{{url}}">{{title}}</a></li>
				{{/each}}

			</ul>
		</div>
	</div>
</nav>

<div class="container-fluid bg-light-shade">
        {{#with masthead}}
            <div class="masthead-heading" id="top-heading">{{heading}}</div>
        {{/with}}
		<div class="py-1 col-10 mx-auto">
			<nav class="nav d-flex justify-content-around">
			{{#each secondaryNav}}
						<li class="nav-item"><a class="nav-link js-scroll-trigger"
								href="{{url}}">{{title}}</a></li>
					{{/each}}
			</nav>
		</div>

</div>
